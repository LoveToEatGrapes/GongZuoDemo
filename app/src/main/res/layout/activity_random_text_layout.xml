<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RandomTextLayoutActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.myapplication.View.stellar.StellarMap
            android:id="@+id/stellar_map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>


        <com.example.myapplication.View.stellar.three.WordGroupView
            android:id="@+id/random_2"
            app:layout_constraintTop_toBottomOf="@id/stellar_map"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
<!--                                 225dp-->

        <com.example.myapplication.View.stellar.three.WordGroupViewTwo
            android:id="@+id/randomTwo"
            app:layout_constraintTop_toBottomOf="@id/random_2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

<!--        app:layout_constraintTop_toBottomOf="@id/random_2"-->
        <com.example.myapplication.View.stellar.two.RandomLayoutTwo
            android:id="@+id/random_1"
            app:layout_constraintTop_toBottomOf="@id/randomTwo"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>